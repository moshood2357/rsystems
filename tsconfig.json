{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@ui/*": ["ui/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["src"]
}
